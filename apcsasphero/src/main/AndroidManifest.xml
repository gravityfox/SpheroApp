<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.gravityfox.apcsa.sphero.apcsasphero.apcsasphero">

    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.gravityfox.apcsa.sphero.apcsasphero.apcsasphero.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="net.gravityfox.apcsa.sphero.apcsasphero.apcsasphero.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.gravityfox.apcsa.sphero.apcsasphero.apcsasphero.MainActivity" />
        </activity>
    </application>

</manifest>